<UserControl x:Class="TheMovie.UI.Views.InstructorsListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Instruktører (liste)" FontSize="18" FontWeight="Bold" Margin="0 0 0 6"/>
        <Border Grid.Row="1" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4" Padding="4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ListView ItemsSource="{Binding Instructors}"
                          SelectedItem="{Binding SelectedInstructor, Mode=TwoWay}"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ScrollViewer.CanContentScroll="True"
                          MaxHeight="220">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Navn" Width="250" DisplayMemberBinding="{Binding Name}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
                <TextBlock Grid.Row="0"
                           Text="{Binding Error}"
                           Foreground="Red"
                           Margin="4"
                           Visibility="{Binding HasError, Converter={StaticResource BoolToVis}}"/>
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 4 0 0">
                    <Button Content="Opdater" Width="80" Command="{Binding RefreshCommand}" />
                    <TextBlock Text="Henter..." Margin="8 0 0 0" Foreground="#555"
                               Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"/>
                </StackPanel>
            </Grid>
        </Border>
        <TextBlock Grid.Row="2" FontSize="10" Foreground="#666" Text="Automatisk opdatering ved gemning." Margin="2 2 0 0"/>
    </Grid>
</UserControl>