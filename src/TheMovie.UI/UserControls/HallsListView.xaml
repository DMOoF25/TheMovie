<UserControl x:Class="TheMovie.UI.Views.HallsListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:TheMovie.UI.Converters"
             xmlns:pf="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
             mc:Ignorable="d">
    <UserControl.Resources>
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <pf:BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Biografsale (liste)" FontSize="18" FontWeight="Bold" Margin="0 0 0 6"/>
        
        <Border Grid.Row="1" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4" Padding="4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Bind to Halls collection on HallsListViewModel -->
                <ListView ItemsSource="{Binding Halls}"
                              SelectedItem="{Binding SelectedHall, Mode=TwoWay}"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              ScrollViewer.CanContentScroll="True"
                              MaxHeight="220">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Biograf" Width="250" DisplayMemberBinding="{Binding CinemaNameDisplay}"/>
                            <GridViewColumn Header="Biografsal" Width="250" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="Kapacitet" Width="100" DisplayMemberBinding="{Binding Capacity}"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <TextBlock Grid.Row="0"
                           Text="{Binding Error}"
                           Foreground="Red"
                           Margin="4"
                           IsHitTestVisible="False"
                           Panel.ZIndex="1"
                           Visibility="{Binding HasError, Converter={StaticResource BoolToVis}}"/>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 4 0 0">
                    <Button Content="Opdater" Width="80" Command="{Binding RefreshCommand}" />
                    <TextBlock Text="Henter..." Margin="8 0 0 0" Foreground="#555"
                               Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
