<Page x:Class="TheMovie.UI.Views.EditScreeningView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TheMovie.UI.Converters"
      xmlns:views="clr-namespace:TheMovie.UI.Views"
      mc:Ignorable="d"
      Title="Tilføj / redigere forstillinger">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Page.Resources>

    <StackPanel Orientation="Vertical" Margin="0 0 8 0">
        <TextBlock Text="Tilføj / Rediger FORESTILLINGER" FontSize="24" FontWeight="Bold" Margin="0 0 0 10"/>
        
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" Margin="0 0 0 6">
                    <TextBlock Text="Biograf:" Margin="0 0 20 0"/>
                    <ComboBox
                        ItemsSource="{Binding Cinemas}"
                        DisplayMemberPath="Name"
                        SelectedValuePath="Id"
                        SelectedValue="{Binding SelectedCinemaId, Mode=TwoWay}"
                        Width="250"
                        HorizontalAlignment="Left"
                        Margin="0 0 20 0"/>
                    <TextBlock Text="Sal:" Margin="0 0 20 0"/>
                    <ComboBox
                        ItemsSource="{Binding Halls}"
                        DisplayMemberPath="Name"
                        SelectedValuePath="Id"
                        SelectedValue="{Binding SelectedHallId, Mode=TwoWay}"
                        Width="250"
                        HorizontalAlignment="Left"
                        Margin="0 0 20 0"/>
                    <TextBlock Text="Film:" Margin="0 0 6 0"/>
                    <ComboBox
                        ItemsSource="{Binding Movies}"
                        DisplayMemberPath="Title"
                        SelectedValuePath="Id"
                        SelectedValue="{Binding SelectedMovieId, Mode=TwoWay}"
                        Width="250"
                        HorizontalAlignment="Left"
                        Margin="0 0 20 0"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="0 0 0 6">
                    <TextBlock Text="Dato og tid:" Margin="0 0 20 0"/>
                    <DatePicker
                        SelectedDate="{Binding ScreeningDate, Mode=TwoWay}"
                        Margin="0 0 20 0"
                        Width="250"
                        HorizontalAlignment="Left"/>
                    <TextBox VerticalAlignment="Top"
                             Text="{Binding ScreeningTimeText, UpdateSourceTrigger=PropertyChanged}"
                             PreviewTextInput="ScreeningTime_PreviewTextInput"
                             MinWidth="60"
                             MaxHeight="20"
                             Margin="0 0 20 0"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <views:ScreeningsListView x:Name="ScreeningsListControl"/>
    </StackPanel>
</Page>