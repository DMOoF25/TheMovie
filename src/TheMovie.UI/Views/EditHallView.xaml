<Page x:Class="TheMovie.UI.Views.EditHallView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TheMovie.UI.Views"
      xmlns:conv="clr-namespace:TheMovie.UI.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditHallView">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Page.Resources>

    <StackPanel Orientation="Vertical" Margin="0 0 8 0">
        <TextBlock Text="Tilføj / Rediger Biograf sale" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0 0 0 10"/>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Biograf:" VerticalAlignment="Top" Margin="0,0,8,0"/>
            <ComboBox ItemsSource="{Binding Cinemas}" 
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding SelectedCinemaId, Mode=TwoWay}" 
                      MaxHeight="20" 
                      MinWidth="250" 
                      Margin="0,0,0,6"/>
            <TextBlock Text="Navn:" 
                       VerticalAlignment="Top" 
                       Margin="0,0,8,0"/>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                     MaxHeight="20"
                     MinWidth="250"
                     Margin="0,0,0,6"/>
        </StackPanel>
        <TextBlock
                    Text="{Binding Error}"
                    Foreground="Red"
                    TextWrapping="Wrap"
                    Visibility="{Binding HasError, Converter={StaticResource BoolToVis}}"
                    Margin="0 0 0 6"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Tilføj" Width="80" Command="{Binding AddCommand}" Margin="0 0 6 0"
                    Visibility="{Binding IsAddMode, Converter={StaticResource BoolToVis}}"/>
            <Button Content="Gem" Width="80" Command="{Binding SaveCommand}" Margin="0 0 6 0"
                    Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVis}}"/>
            <Button Content="Slet" Width="80" Command="{Binding DeleteCommand}" Margin="0 0 6 0"
                    Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVis}}"/>
            <Button Content="Nulstil" Width="80" Command="{Binding ResetCommand}" Margin="0 0 6 0"
                    Visibility="{Binding IsAddMode, Converter={StaticResource BoolToVis}}"/>
            <Button Content="Annuller" Width="80" Command="{Binding CancelCommand}"/>
        </StackPanel>

        <local:HallsListView x:Name="HallsListControl"/>
    </StackPanel>
</Page>
