<Page x:Class="TheMovie.UI.Views.MainPageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Main Page - Screenings">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filters -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                <TextBlock Text="Cinema" Margin="0,0,0,4"/>
                <ComboBox ItemsSource="{Binding Cinemas}"
                          SelectedValuePath="Id"
                          DisplayMemberPath="Label"
                          SelectedValue="{Binding SelectedCinemaId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="0,0,8,0">
                <TextBlock Text="Movie" Margin="0,0,0,4"/>
                <ComboBox ItemsSource="{Binding Movies}"
                          SelectedValuePath="Id"
                          DisplayMemberPath="Label"
                          SelectedValue="{Binding SelectedMovieId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Margin="0,0,8,0">
                <TextBlock Text="Date" Margin="0,0,0,4"/>
                <DatePicker SelectedDate="{Binding SelectedDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="8,0,0,0">
                <Button Content="Search"
                        Padding="12,6"
                        Margin="0,0,8,0"
                        Command="{Binding SearchCommand}"/>
                <Button Content="Clear"
                        Padding="12,6"
                        Command="{Binding ClearFiltersCommand}"/>
            </StackPanel>
        </Grid>

        <!-- Spacer -->
        <Border Grid.Row="1"/>

        <!-- Screenings list -->
        <ListView Grid.Row="2"
                  ItemsSource="{Binding Screenings}"
                  SelectedItem="{Binding SelectedScreening, Mode=TwoWay}"
                  SelectionChanged="ScreeningsList_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Cinema" Width="180" DisplayMemberBinding="{Binding CinemaName}"/>
                    <GridViewColumn Header="Hall" Width="120" DisplayMemberBinding="{Binding HallName}"/>
                    <GridViewColumn Header="Movie" Width="260" DisplayMemberBinding="{Binding MovieTitle}"/>
                    <GridViewColumn Header="Start" Width="150" DisplayMemberBinding="{Binding StartTime}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Actions -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <TextBlock Text="{Binding Error}" Foreground="Tomato" VerticalAlignment="Center" Margin="0,0,16,0"/>
            <Button Content="Book selected"
                    Padding="12,6"
                    IsEnabled="{Binding CanOpenBooking}"
                    Command="{Binding OpenBookingCommand}"/>
        </StackPanel>
    </Grid>
</Page>