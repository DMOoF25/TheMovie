<Page x:Class="TheMovie.UI.Views.EditMovieView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TheMovie.UI.Converters"
      xmlns:views="clr-namespace:TheMovie.UI.Views"
      mc:Ignorable="d"
      Title="Tilføj film">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <local:DateOnlyToDateTimeConverter x:Key="DateOnlyToDateTimeConverter"/>
        <local:SelectedGenresTextConverter x:Key="SelectedGenresTextConverter"/>
    </Page.Resources>

    <StackPanel Orientation="Vertical" Margin="0 0 8 0">
        <TextBlock Text="Tilføj / Rediger film" FontSize="24" FontWeight="Bold" Margin="0 0 0 10"/>

        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" Margin="0 0 0 6">
                    <TextBlock Text="Titel:" Margin="0 0 6 0"/>
                    <TextBox VerticalAlignment="Top"
                             Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                             MaxHeight="20"
                             MinWidth="250" Margin="0 0 20 0"/>

                    <TextBlock Text="Instruktør:" Margin="0 0 20 0"/>
                    <ComboBox
                        ItemsSource="{Binding Instructors}"
                        DisplayMemberPath="Name"
                        SelectedValuePath="Id"
                        SelectedValue="{Binding SelectedInstructorId, Mode=TwoWay}"
                        Width="250"
                        HorizontalAlignment="Left"
                        Margin="0 0 20 0"/>

                    <TextBlock Text="Varighed (min):" Margin="0 0 20 0"/>
                    <TextBox VerticalAlignment="Top"
                             Text="{Binding DurationText, UpdateSourceTrigger=PropertyChanged}"
                             PreviewTextInput="Duration_PreviewTextInput"
                             MinWidth="60"
                             MaxHeight="20"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 0 0 6">
                    <TextBlock Text="Primiære dato:" Margin="0 0 20 0"/>
                    <DatePicker
                        SelectedDate="{Binding PremiereDate, Mode=TwoWay, Converter={StaticResource DateOnlyToDateTimeConverter}}"
                        Margin="0 0 20 0"
                        Width="250"
                        HorizontalAlignment="Left"/>

                    <TextBlock Text="Genrer:" Margin="0 0 20 0"/>
                    <ComboBox x:Name="GenresCombo"
                              ItemsSource="{Binding GenreOptions}"
                              Width="250"
                              IsEditable="True"
                              IsReadOnly="True"
                              StaysOpenOnEdit="True"
                              IsTextSearchEnabled="False"
                              Padding="2"
                              SelectionChanged="GenresCombo_SelectionChanged"
                              Text="{Binding GenreOptions, Mode=OneWay, Converter={StaticResource SelectedGenresTextConverter}}"
                              HorizontalAlignment="Left">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Name}"
                                          IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                          Padding="2"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <EventSetter Event="PreviewMouseLeftButtonDown"
                                             Handler="GenresComboItem_PreviewMouseLeftButtonDown"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                </StackPanel>

                <TextBlock
                    Text="{Binding Error}"
                    Foreground="Red"
                    TextWrapping="Wrap"
                    Visibility="{Binding Error, Converter={StaticResource NullToVisibilityConverter}}"
                    Margin="0 0 0 6"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Tilføj" Width="80" Command="{Binding AddCommand}" IsDefault="True" Margin="0 0 6 0"
                    Visibility="{Binding IsAddMode, Converter={StaticResource BoolToVis}}"/>
            <Button Content="Gem" Width="80" Command="{Binding SaveCommand}" IsDefault="True" Margin="0 0 6 0"
                    Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVis}}"/>

            <Button Content="Nulstil" Width="80" Command="{Binding ResetCommand}" Margin="0 0 6 0"
                    Visibility="{Binding IsAddMode, Converter={StaticResource BoolToVis}}"/>
            <Button Content="Slet" Width="80" Command="{Binding DeleteCommand}" Margin="0 0 6 0"
                    Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVis}}"/>
            <Button Content="Annuller" Width="80" Command="{Binding CancelCommand}"/>
        </StackPanel>

        <views:MoviesListView x:Name="MoviesListControl"/>
    </StackPanel>
</Page>